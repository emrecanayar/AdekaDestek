@using Microsoft.Extensions.Options
@using AdekaDestek.Entities.Concrete
@inject IOptionsSnapshot<WebSiteInfo> WebSiteInfo
@{
    var websiteInfo = WebSiteInfo.Value;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <link rel="icon" type="image/png" href="~/AdminArea/img/icons/favicon.ico" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@websiteInfo.SeoDescription">
    <meta name="author" content="@websiteInfo.SeoAuthor">
    <meta name="keywords" content="@websiteInfo.SeoTags" />

    <title>@ViewBag.Title - @websiteInfo.Title</title>

    @await Html.PartialAsync("_LayoutCssPartial")
    @await RenderSectionAsync("Styles", false)
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">


        @await Component.InvokeAsync("AdminMenu")

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                @await Component.InvokeAsync("UserMenu")
                <!-- Begin Page Content -->
                <main>
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                    <!-- /.container-fluid -->
                </main>
            </div>
            <!-- End of Main Content -->
            @await Html.PartialAsync("_LayoutFooterPartial")

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    @await Html.PartialAsync("_LayoutLogoutModalPartial")
    @await Html.PartialAsync("_LayoutJsPartial")
    @await RenderSectionAsync("Scripts", false)

</body>

</html>