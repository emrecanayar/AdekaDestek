@model AdekaDestek.Entities.Dtos.UserUpdateDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-edit"></span> Kullanıcı Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" id="form-user-update">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="UserName"></label>
                            <input class="form-control" asp-for="UserName" placeholder="Lütfen, kullanıcı adı giriniz." />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Email"></label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="Lütfen, e-posta adresi giriniz." />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Lütfen, telefon numarası giriniz." />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName"></label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="Lütfen, ad giriniz." />
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LastName"></label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Lütfen, soyad giriniz." />
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SapUserName"></label>
                            <input type="text" class="form-control" asp-for="SapUserName" placeholder="Lütfen, Sap kullanıcı adı giriniz." />
                            <span class="text-danger" asp-validation-for="SapUserName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SapEmployeeNo"></label>
                            <input type="text" class="form-control" asp-for="SapEmployeeNo" placeholder="Lütfen, Sap personel no giriniz." />
                            <span class="text-danger" asp-validation-for="SapEmployeeNo"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="InfiniUserName"></label>
                            <input type="text" class="form-control" asp-for="InfiniUserName" placeholder="Lütfen, İnfini kullanıcı adı giriniz." />
                            <span class="text-danger" asp-validation-for="InfiniUserName"></span>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnUpdate"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
