@model AdekaDestek.Mvc.Areas.Admin.Models.ResetPasswordViewModel
@{
    Layout = "_UserLoginLayout";
    ViewBag.Title = "Şifremi Unuttum";

}
<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2"><b>Şifre Yenileme</b></h1>
                                <p class="mb-4">Şifre yenileme bağlantısını gönderebilmemiz için sisteme kayıtlı e-posta adresinize ihtiyacımız var.</p>
                            </div>
                            <form asp-area="Admin" asp-controller="Auth" asp-action="ResetPassword" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" asp-for="Email" aria-describedby="emailHelp" placeholder="E-posta Adresi">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Şifremi Yenile
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="register.html">Üye ol</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-area="Admin" asp-controller="Auth" asp-action="Login">Hesabanız var mı? Giriş Yapın!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
