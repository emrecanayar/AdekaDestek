@model AdekaDestek.Entities.Concrete.SmsSettings

@{
    Layout = "_Layout";
    ViewBag.Title = "E-Posta Ayarları";

}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-sms"></span> Sms Ayarları</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Options" asp-action="SmsSettings" method="post" id="form-emailsettings-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Username"></label>
                            <input type="text" class="form-control" asp-for="Username" placeholder="Lütfen, kullanıcı adı/telefon bilginizi giriniz." />
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Lütfen, şifre bilginizi giriniz." />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Key"></label>
                            <input type="text" class="form-control" asp-for="Key" placeholder="Lütfen, kullanıcı adı/telefon bilginizi giriniz." />
                            <span class="text-danger" asp-validation-for="Key"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SecretKey"></label>
                            <input type="text" class="form-control" asp-for="SecretKey" placeholder="Lütfen, kullanıcı adı/telefon bilginizi giriniz." />
                            <span class="text-danger" asp-validation-for="SecretKey"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Sender"></label>
                            <input type="text" class="form-control" asp-for="Sender" placeholder="Lütfen, şifre bilginizi giriniz." />
                            <span class="text-danger" asp-validation-for="Sender"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Kaydet</button>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> İptal</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
