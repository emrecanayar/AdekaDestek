@model AdekaDestek.Entities.Concrete.TwoFactorOptions

@{
    Layout = "_Layout";
    ViewBag.Title = "Geçen Süre Ayarı";

}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-business-time"></span> Geçen Süre Ayarı</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Options" asp-action="TimeLeftSettings" method="post" id="form-timeleftsettings-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="CodeTimeExpire"></label>
                            <input type="text" class="form-control" asp-for="CodeTimeExpire" placeholder="Lütfen, kullanıcı adı/telefon bilginizi giriniz." />
                            <span class="text-danger" asp-validation-for="CodeTimeExpire"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Kaydet</button>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> İptal</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
